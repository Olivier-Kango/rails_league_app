<h1 class="text-center text-decoration-underline">There are <%= @players.size %> Members in our family </h1>

<% if notice %>
  <div class="alert alert-success text-center"><%= notice %></div>
<% end %>

<table class="table table-bordered bg-white">
  <thead class="bg-info-subtle">
    <tr>
      <th class="px-4">Names</th>
      <th class="text-center">Age</th>
      <th class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>
  </tbody>

  <% unless @players.empty? %>
    <% @players.each_with_index do |player, index| %>
      <tr>
        <td class="px-4"><%= link_to "#{index+1}) #{player.first_name} #{player.last_name}", player_path(player), class: "link" %></td>
        <td class="text-center"><%= player.age %></td>
          <td class="text-center d-flex gap-3 align-items-center justify-content-center">
            <%= button_to "Remove", player, method: :delete, data: { turbo: false }, class: "bg-danger-subtle border-danger text-danger text-decoration-none" %>
            <%= link_to "Edit", edit_player_path(player), class: "bg-primary-subtle border-primary text-primary text-decoration-none edit" %>
          </td>
      </tr>
    <%end%>
  <%else%>
    <tr>
      <td colspan="3" class="text-center text-danger py-4 display-6">You need to add members first !!!</td>
    </tr>
  <%end%>
</table>

<%= link_to "Create New Player", new_player_path, class: "button" %>